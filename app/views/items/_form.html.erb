<body>

<%= form_for [current_user, @item] do |form|%>
  <div class="field">
    <%= form.label :Restaurant %><br>
    <%= form.text_area :restaurant %>
  </div>
  <br>

   <div class = "field">
    <%= form.label :Item_To_Be_Donated %><br>
    <%= form.text_area :name %>
  </div>
  <br>

   <div class="field">
    <%= form.label :quantity %><br>
    <%= form.text_area :quantity %>
  </div>

  <div class="field">
    <%= form.label :expiration %><br>
    <%= form.date_select :expiration %>
  </div>
  <br>
    
  <div class="field">
    <%= form.label :location %><br>
    <%= form.text_area :location %>
  </div>
  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
